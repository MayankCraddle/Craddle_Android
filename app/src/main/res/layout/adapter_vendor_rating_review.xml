<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>
    <LinearLayout
        android:padding="@dimen/_10sdp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/_7sdp"
        android:background="@drawable/rac_rounded"
        android:layout_height="wrap_content">
        <RatingBar
            android:id="@+id/rBar_product_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stepSize="0.5"
            android:theme="@style/RatingBar"
            android:layout_gravity="center_vertical"
            style="@android:style/Widget.Material.RatingBar.Small"
            android:numStars="5"
            />
        <com.cts.saharaGoSeller.customui.CustomTextviewBold
            android:id="@+id/tv_title_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="@dimen/_12sdp"
            android:text=""
            android:textColor="@color/black"/>
        <com.cts.saharaGoSeller.customui.CustomTextView
            android:id="@+id/tv_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxLines="4"
            android:ellipsize="end"
            android:textSize="@dimen/_9sdp"
            android:textColor="@color/black"
            android:text=""
            />
        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.cts.saharaGoSeller.customui.CustomTextviewBold
                android:id="@+id/tv_timedate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:ellipsize="end"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/colorGreen"
                android:text=""
                />
            <com.cts.saharaGoSeller.customui.CustomTextView
                android:layout_marginStart="@dimen/_10sdp"
                android:id="@+id/tv_seach_actual_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxLines="4"
                android:ellipsize="end"
                android:textSize="@dimen/_9sdp"
                android:textColor="@color/black"
                android:text=""
                />
        </androidx.appcompat.widget.LinearLayoutCompat>


    </LinearLayout>

</layout>