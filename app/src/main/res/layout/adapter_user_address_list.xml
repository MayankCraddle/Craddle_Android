<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/cv_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:layout_marginBottom="@dimen/_4sdp"
        android:orientation="vertical"
        android:background="@drawable/rac_rounded">


        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_marginLeft="@dimen/_6sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            xmlns:android="http://schemas.android.com/apk/res/android">

            <LinearLayout
                android:id="@+id/parentLayout"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:orientation="vertical">
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <com.cts.saharaGoSeller.customui.CustomTextviewBold
                                android:id="@+id/tv_land_mark"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Home"
                                android:textColor="@color/black"
                                android:gravity="start"
                                android:textAlignment="viewStart"
                                android:textAllCaps="false"
                                android:textSize="@dimen/_12ssp" />
                            <LinearLayout
                                android:id="@+id/more_button"
                                android:layout_width="@dimen/_17sdp"
                                android:layout_height="@dimen/_12sdp"
                                android:textColor="@color/white"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textSize="@dimen/_14ssp">

                                <ImageView
                                    android:id="@+id/iv_more"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:src="@drawable/more" />
                            </LinearLayout>
                        </androidx.appcompat.widget.LinearLayoutCompat>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                              <com.cts.saharaGoSeller.customui.CustomTextviewBold
                                android:id="@+id/tv_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                  android:layout_gravity="center_vertical"
                                android:text="Home"
                                android:textColor="@color/black"
                                android:gravity="start"
                                android:textAlignment="viewStart"
                                android:textAllCaps="false"
                                android:textSize="@dimen/_11ssp" />
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/whiteCream"
                                    android:padding="@dimen/_1sdp"
                                    android:layout_marginStart="@dimen/_10sdp">
                                    <com.cts.saharaGoSeller.customui.CustomTextView
                                        android:id="@+id/tv_land_title"
                                        android:layout_width="wrap_content"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:text="Home"
                                        android:layout_marginEnd="@dimen/_5sdp"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginStart="@dimen/_5sdp"
                                        />
                                </LinearLayout>
                                <LinearLayout
                                    android:visibility="gone"
                                    android:id="@+id/ll_default"
                                    android:layout_alignParentRight="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/_1sdp"
                                    android:layout_marginStart="@dimen/_10sdp">
                                    <ImageView
                                        android:id="@+id/tv_default"
                                        android:layout_width="wrap_content"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/default_address"
                                        android:layout_marginEnd="@dimen/_5sdp"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginStart="@dimen/_5sdp"
                                        />
                                </LinearLayout>
                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:visibility="gone"
                                    android:id="@+id/edit_button"
                                    android:layout_width="@dimen/_17sdp"
                                    android:layout_height="@dimen/_17sdp"
                                    android:textColor="@color/white"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:textSize="@dimen/_14ssp">

                                    <ImageView
                                        android:id="@+id/iv_edit_address"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:src="@drawable/edit_dark" />
                                </LinearLayout>


                                <LinearLayout
                                    android:visibility="gone"
                                    android:id="@+id/delete_button"
                                    android:layout_width="@dimen/_17sdp"
                                    android:layout_height="@dimen/_17sdp"
                                    android:textColor="@color/white"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:textSize="@dimen/_14ssp">

                                    <ImageView
                                        android:id="@+id/iv_delete_add"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:src="@drawable/delete_dark" />
                                </LinearLayout>



                            </LinearLayout>
                        </LinearLayout>

                        <com.cts.saharaGoSeller.customui.CustomTextView
                            android:id="@+id/tv_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="928 Lehner Junction APT.0234"
                            android:textAlignment="viewStart"
                            android:textColor="@color/black"
                            android:gravity="start"
                            android:textAllCaps="false"
                            android:textSize="@dimen/_10ssp" />

                        <com.cts.saharaGoSeller.customui.CustomTextView
                            android:id="@+id/tv_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mobile : 927363520"
                            android:maxLines="3"
                            android:textAlignment="viewStart"
                            android:gravity="start"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10ssp" />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</layout>