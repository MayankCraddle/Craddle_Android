<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".user.userActivity.UserMainActivity">
        <FrameLayout
            android:layout_above="@+id/footer"
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:background="@color/whiteCream"
            android:layout_height="match_parent"
           />

        <androidx.cardview.widget.CardView
            android:id="@+id/footer"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:elevation="@dimen/_6sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_40sdp"
            android:background="@color/colorLightWhite"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:background="@color/white"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <RelativeLayout
                android:id="@+id/relativeHome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/_10sdp"
                >

                <ImageView
                    android:id="@+id/home_image"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:src="@drawable/home" />

                <com.cts.saharaGoSeller.customui.CustomTextView
                    android:id="@+id/textHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/home_image"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="@string/home"
                    android:textAllCaps="false"
                    android:textColor="@color/colorGreen"
                    android:textSize="@dimen/_8ssp" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_cart"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="@color/white"
                android:layout_marginTop="@dimen/_10sdp"
                >

                <ImageView
                    android:id="@+id/iv_cart"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:src="@drawable/marketplce" />


                <com.cts.saharaGoSeller.customui.CustomTextView
                    android:id="@+id/tv_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/marketplace_new"
                    android:layout_below="@+id/iv_cart"
                    android:textSize="@dimen/_8ssp"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:layout_centerHorizontal="true"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_blogs"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="@color/white"
                android:layout_marginTop="@dimen/_10sdp"
                >

                <ImageView
                    android:id="@+id/iv_blogs"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:src="@drawable/category_new" />
                <com.cts.saharaGoSeller.customui.CustomTextView
                    android:id="@+id/tv_blogs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/category"
                    android:layout_below="@+id/iv_blogs"
                    android:textSize="@dimen/_8ssp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:layout_centerHorizontal="true"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_wish_list"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="@color/white"
                android:layout_marginTop="@dimen/_10sdp"
                >

                <ImageView
                    android:id="@+id/iv_wishlist"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:src="@drawable/explore_two" />

                <com.cts.saharaGoSeller.customui.CustomTextView
                    android:id="@+id/tv_wish_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_wishlist"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="@string/search"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_8ssp" />

            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/relativeAccount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="@color/white"
                android:layout_marginTop="@dimen/_10sdp"
                >


                <ImageView
                    android:id="@+id/more_image"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/account"/>
                <com.cts.saharaGoSeller.customui.CustomTextView
                    android:id="@+id/tv_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/account"
                    android:layout_below="@+id/more_image"
                    android:textSize="@dimen/_8ssp"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_centerHorizontal="true"
                    />

            </RelativeLayout>

        </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</layout>
