<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

        <LinearLayout
            android:id="@+id/llOpenVendorDetail"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <RelativeLayout
                    android:padding="@dimen/_7sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_vendor_search_result"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_centerVertical="true"
                        android:layout_height="@dimen/_60sdp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/career"
                        />
                    <LinearLayout
                        android:layout_toEndOf="@id/iv_vendor_search_result"
                        android:orientation="vertical"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <com.cts.saharaGoSeller.customui.CustomTextviewBold
                                android:id="@+id/tv_vendor_title_search_result"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:textSize="@dimen/_12sdp"
                                android:text=""
                                android:textColor="@color/black"/>
                            <ImageView
                                android:visibility="gone"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/wishlist"/>
                        </RelativeLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/location_one"/>
                            <com.cts.saharaGoSeller.customui.CustomTextView
                                android:id="@+id/tv_vendor_search_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:textSize="@dimen/_9sdp"
                                android:textColor="@color/black"
                                android:text=""
                                />

                        </LinearLayout>
                        <RatingBar
                            android:id="@+id/rBar_product_details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:stepSize="0.5"
                            android:theme="@style/RatingBar"
                            android:layout_gravity="center_vertical"
                            style="@android:style/Widget.Material.RatingBar.Small"
                            android:numStars="5"
                            />

                    </LinearLayout>
                </RelativeLayout>
            <View
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/light_grey"/>
        </LinearLayout>

</layout>