<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorGreen"
    android:layout_height="@dimen/_45sdp">
    <ImageView
        android:id="@+id/nchat_header_back_press"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_centerInParent="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/back_arrow">
    </ImageView>
    <ImageView

        android:id="@+id/nchat_header_imag"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:text="@string/user"
        android:visibility="gone"
        android:textSize="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_40sdp"
        android:textColor="@color/white"
        android:layout_centerInParent="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/avatar"
        android:gravity="center">
    </ImageView>
    <com.cts.saharaGoSeller.customui.CustomTextviewBold
        android:layout_toEndOf="@id/nchat_header_back_press"
        android:id="@+id/chat_header_name_text"
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:text="enenn"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/white"
        />
    <TextView
        android:visibility="gone"
        android:id="@+id/chat_header_specility_text"
        android:layout_below="@id/chat_header_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:layout_toEndOf="@id/nchat_header_imag"
        android:layout_marginStart="@dimen/_10sdp"
        android:text="dhdd"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/_5sdp"
        android:textAllCaps="false"
        android:textSize="@dimen/_8sdp"
        />
    <ImageView
        android:id="@+id/chat_header_option"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_40sdp"
        android:visibility="gone"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        />
</RelativeLayout>