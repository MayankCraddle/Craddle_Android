<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:padding="@dimen/_7sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/card_vendor_search_result"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp">
                    <ImageView
                        android:id="@+id/iv_vendor_search_result"
                        android:layout_width="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_height="match_parent"
                        android:src="@drawable/loading"
                        />
                    <ImageView
                        android:id="@+id/ivAddToWishList"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/wishlist"/>
                </RelativeLayout>
            <LinearLayout
                android:layout_toEndOf="@id/card_vendor_search_result"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.cts.saharaGoSeller.customui.CustomTextviewBold
                        android:id="@+id/tv_vendor_title_search_result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textSize="@dimen/_12sdp"
                        android:text=""
                        android:textColor="@color/black"/>

                </RelativeLayout>
                <RatingBar
                    android:id="@+id/rBar_product_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:stepSize="0.5"
                    android:theme="@style/RatingBar"
                    android:layout_gravity="center_vertical"
                    style="@android:style/Widget.Material.RatingBar.Small"
                    android:numStars="5"
                    />
                <com.cts.saharaGoSeller.customui.CustomTextView
                    android:id="@+id/tv_seach_pro_dis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:maxLines="4"
                    android:ellipsize="end"
                    android:textSize="@dimen/_9sdp"
                    android:textColor="@color/black"
                    android:text=""
                    />
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.cts.saharaGoSeller.customui.CustomTextviewBold
                        android:id="@+id/tv_seach_dis_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:ellipsize="end"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/colorGreen"
                        android:text=""
                        />
                    <com.cts.saharaGoSeller.customui.CustomTextView
                        android:layout_marginStart="@dimen/_10sdp"
                        android:id="@+id/tv_seach_actual_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:maxLines="4"
                        android:ellipsize="end"
                        android:textSize="@dimen/_9sdp"
                        android:textColor="@color/black"
                        android:text=""
                        />
                </androidx.appcompat.widget.LinearLayoutCompat>


            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/light_grey"/>
    </LinearLayout>

</layout>