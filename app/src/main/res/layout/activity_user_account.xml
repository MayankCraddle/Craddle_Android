<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.cradle.viewmodel.MainViewModel" />
        <variable
            name="onAccount"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whiteCream">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_account_header"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    android:background="@color/colorGreen">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivOpenNotificationList"
                        android:layout_width="@dimen/_23sdp"
                        android:layout_height="@dimen/_23sdp"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:src="@drawable/notification_white"/>
                    <RelativeLayout
                        android:id="@+id/rlToolbar"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp">
                        <com.cts.saharaGoSeller.customui.CustomTextviewBold
                            android:id="@+id/tv_usertoolbartitle"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/white"
                            android:text="@string/my_account" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl_user_profile"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_centerInParent="true">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_user_profile"
                            android:layout_width="@dimen/_65sdp"
                            android:layout_height="@dimen/_65sdp"
                            android:src="@drawable/loading" />
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/edit"/>
                    </RelativeLayout>


                    <LinearLayout
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/rl_user_profile"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.cts.saharaGoSeller.customui.CustomTextviewBold
                            android:id="@+id/tv_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_11sdp"
                            android:text="" />

                        <com.cts.saharaGoSeller.customui.CustomTextView
                            android:visibility="gone"
                            android:id="@+id/tv_user_phone_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10sdp"
                            android:text="" />

                        <com.cts.saharaGoSeller.customui.CustomTextView
                            android:id="@+id/tv_user_email_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_10sdp"
                            android:text="" />
                    </LinearLayout>
                </RelativeLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    app:cardCornerRadius="@dimen/_7sdp">
                    <LinearLayout
                        android:id="@+id/ll_open_default"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:padding="@dimen/_7ssp"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <com.cts.saharaGoSeller.customui.CustomTextviewBold
                                android:layout_centerVertical="true"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_10sdp"
                                android:textColor="@color/black"
                                android:text="@string/my_address"/>

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/edt_default_address"
                                android:layout_width="@dimen/_27sdp"
                                android:layout_height="@dimen/_27sdp"
                                android:layout_alignParentRight="true"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:src="@drawable/edit" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:id="@+id/ll_addres"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <com.cts.saharaGoSeller.customui.CustomTextviewBold
                                    android:id="@+id/tv_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:layout_gravity="center_vertical"
                                    android:textColor="@color/black"
                                    android:gravity="start"
                                    android:textAlignment="viewStart"
                                    android:textAllCaps="false"
                                    android:textSize="@dimen/_11ssp" />
                                <com.cts.saharaGoSeller.customui.CustomTextView
                                    android:id="@+id/tv_address"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text=""
                                    android:textAlignment="viewStart"
                                    android:textColor="@color/black"
                                    android:gravity="start"
                                    android:textAllCaps="false"
                                    android:textSize="@dimen/_10ssp" />
                                <com.cts.saharaGoSeller.customui.CustomTextView
                                    android:id="@+id/tv_phone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:maxLines="3"
                                    android:textAlignment="viewStart"
                                    android:gravity="start"
                                    android:textAllCaps="false"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_10ssp" />

                            </LinearLayout>
                            <ImageView
                                android:id="@+id/iv_no_addrss"
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="@dimen/_80sdp"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/no_address"
                                android:layout_centerVertical="true"
                                />
                        </RelativeLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1ssp"
                            android:background="@color/whiteCream"
                            android:layout_marginTop="@dimen/_7ssp"
                            />
                            <com.cts.saharaGoSeller.customui.CustomTextviewBold
                                android:id="@+id/tv_manage_add"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_9sdp"
                                android:textSize="@dimen/_8sdp"
                                android:padding="@dimen/_6sdp"
                                android:textAlignment="center"
                                android:textColor="@color/colorGreen"
                                android:text="@string/manage_address"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    app:cardCornerRadius="@dimen/_7sdp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/_7ssp">
                        <LinearLayout
                            android:id="@+id/ll_my_order"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_7sdp">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_27sdp"
                                android:layout_height="@dimen/_27sdp"
                                android:src="@drawable/my_account"/>
                            <com.cts.saharaGoSeller.customui.CustomTextviewBold
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_7ssp"
                                android:layout_gravity="center_vertical"
                                android:textSize="@dimen/_10sdp"
                                android:textColor="@color/black"
                                android:text="@string/my_order"/>
                        </LinearLayout>
                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/ll_my_review"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_7sdp">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_27sdp"
                                android:layout_height="@dimen/_27sdp"
                                android:src="@drawable/my_reviews"/>
                            <com.cts.saharaGoSeller.customui.CustomTextviewBold
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_7ssp"
                                android:layout_gravity="center_vertical"
                                android:textSize="@dimen/_10sdp"
                                android:textColor="@color/black"
                                android:text="@string/my_review"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ll_change_now"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_7sdp">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_27sdp"
                                android:layout_height="@dimen/_27sdp"
                                android:src="@drawable/change_password"/>
                            <com.cts.saharaGoSeller.customui.CustomTextviewBold
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_7ssp"
                                android:layout_gravity="center_vertical"
                                android:textSize="@dimen/_10sdp"
                                android:textColor="@color/black"
                                android:text="@string/change_password"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/llDeactivateAccount"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_7sdp">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_27sdp"
                                android:layout_height="@dimen/_27sdp"
                                android:src="@drawable/deactivate"/>
                            <com.cts.saharaGoSeller.customui.CustomTextviewBold
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_7ssp"
                                android:layout_gravity="center_vertical"
                                android:textSize="@dimen/_10sdp"
                                android:textColor="@color/black"
                                android:text="@string/deactivate_account"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/llDeleteAccount"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_7sdp">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:src="@drawable/delete_account"/>
                            <com.cts.saharaGoSeller.customui.CustomTextviewBold
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_7ssp"
                                android:layout_gravity="center_vertical"
                                android:textSize="@dimen/_10sdp"
                                android:textColor="@color/black"
                                android:text="@string/delete_account"/>
                        </LinearLayout>
                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/llNotification"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_7sdp">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_27sdp"
                                android:layout_height="@dimen/_27sdp"
                                android:src="@drawable/notification_two"/>
                            <com.cts.saharaGoSeller.customui.CustomTextviewBold
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_7ssp"
                                android:layout_gravity="center_vertical"
                                android:textSize="@dimen/_10sdp"
                                android:textColor="@color/black"
                                android:text="@string/notification"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ll_logout"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_7sdp">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_27sdp"
                                android:layout_height="@dimen/_27sdp"
                                android:src="@drawable/logout"/>
                            <com.cts.saharaGoSeller.customui.CustomTextviewBold
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_7ssp"
                                android:layout_gravity="center_vertical"
                                android:textSize="@dimen/_10sdp"
                                android:textColor="@color/black"
                                android:text="@string/log_out"/>
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>