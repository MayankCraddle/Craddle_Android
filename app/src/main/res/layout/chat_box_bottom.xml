<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:gravity="bottom"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/chat_box_layaout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:padding="@dimen/_3sdp"
        android:background="@drawable/edittext_change"
        >
        <ImageView
            android:visibility="gone"
            android:id="@+id/consult_attache_file"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:src="@drawable/plus" />

        <EditText
            android:layout_toStartOf="@+id/consult_send_message"

            android:id="@+id/et_writeComments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_toEndOf="@+id/consult_attache_file"
            android:background="@null"
            android:hint="@string/type_your_comment"
            android:inputType="textMultiLine|textCapSentences|textAutoCorrect"
            android:padding="@dimen/_9sdp"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            tools:ignore="RtlSymmetry" />
        <ImageView
            android:id="@+id/consult_send_message"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:visibility="visible"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:src="@drawable/send2x" />

    </RelativeLayout>
</LinearLayout>